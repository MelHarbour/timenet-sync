<Window x:Class="TimeNetSync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeNetSync"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="button" Content="Connect" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="153" Height="75" Click="button_Click"/>
        <Label x:Name="statusLabel" Content="" Margin="0" VerticalAlignment="Top" Height="81" BorderThickness="0"/>
        <TextBox x:Name="logTextBox" Height="117" Margin="0" TextWrapping="Wrap" VerticalAlignment="Bottom" ScrollViewer.VerticalScrollBarVisibility="Auto"/>

    </Grid>
</Window>
